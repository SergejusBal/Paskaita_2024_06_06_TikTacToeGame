<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tictaktoe_main_background_darken_20"
    android:alpha="1">


    <TableLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/tick_tac_toe_grid"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/gameButton0"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />

            <Button
                android:id="@+id/gameButton1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />

            <Button
                android:id="@+id/gameButton2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/gameButton3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />

            <Button
                android:id="@+id/gameButton4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />

            <Button
                android:id="@+id/gameButton5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/gameButton6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />

            <Button
                android:id="@+id/gameButton7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="25dp" />

            <Button
                android:id="@+id/gameButton8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:alpha="0"
                android:padding="8dp" />
        </TableRow>



    </TableLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/reset_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/informationText"
        android:layout_width="353dp"
        android:layout_height="67dp"
        android:layout_marginTop="80dp"
        android:fontFamily="casual"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>